@echo off
if "%1"=="" goto error
IF NOT EXIST \NDIS\*.* GOTO direrror
MKDIR %1\MSLANMAN.DOS
MKDIR %1\MSLANMAN.DOS\DRIVERS
MKDIR %1\MSLANMAN.DOS\DRIVERS\NIF
MKDIR %1\MSLANMAN.DOS\DRIVERS\ETHERNET
MKDIR %1\MSLANMAN.DOS\DRIVERS\ETHERNET\E100B
MKDIR %1\MSLANMAN.OS2
MKDIR %1\MSLANMAN.OS2\DRIVERS
MKDIR %1\MSLANMAN.OS2\DRIVERS\NIF
MKDIR %1\MSLANMAN.OS2\DRIVERS\ETHERNET
MKDIR %1\MSLANMAN.OS2\DRIVERS\ETHERNET\E100B
COPY  \NDIS\E100B.DOS %1\MSLANMAN.DOS\DRIVERS\ETHERNET\E100B
COPY  \NDIS\PROTOCOL.INI %1\MSLANMAN.DOS\DRIVERS\ETHERNET\E100B
COPY  \NDIS\E100B.OS2 %1\MSLANMAN.OS2\DRIVERS\ETHERNET\E100B
COPY  \NDIS\PROTOCOL.INI %1\MSLANMAN.OS2\DRIVERS\ETHERNET\E100B
COPY  \NDIS\STNDNIF\E100BDOS.NIF %1\MSLANMAN.DOS\DRIVERS\NIF\E100B.NIF
COPY  \NDIS\STNDNIF\E100BOS2.NIF %1\MSLANMAN.OS2\DRIVERS\NIF\E100B.NIF
goto end
:direrror
echo Error:
echo NOTE: This file must be run from the drive where the \NDIS directory exists.
goto usage
:error
echo Error:
echo This file creates the MSLANMAN directories on a drive you specify.
:usage
echo Usage: %0 [drive letter] (example: %0 c:)
pause
:end